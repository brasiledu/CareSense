# Exemplo de variáveis de ambiente para o Render
# Copie essas variáveis para o painel do Render

# Django Settings
DEBUG=false
SECRET_KEY=your-super-secret-key-here-change-this-in-production

# Database (será preenchido automaticamente pelo Render quando você conectar o PostgreSQL)
# DATABASE_URL=postgresql://user:password@host:port/database

# Hosts permitidos (será preenchido automaticamente pelo Render)
# ALLOWED_HOSTS=your-app-name.onrender.com
# CSRF_TRUSTED_ORIGINS=https://your-app-name.onrender.com

# Superusuário (opcional - para criar automaticamente)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@caresense.com
DJANGO_SUPERUSER_PASSWORD=admin@care

# Configurações adicionais de produção
SECURE_SSL_REDIRECT=true
SESSION_COOKIE_SECURE=true
CSRF_COOKIE_SECURE=true
