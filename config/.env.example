# CareSense - Environment Variables

# =====================================
# CONFIGURAÇÕES BÁSICAS
# =====================================

# Django Secret Key (OBRIGATÓRIO em produção)
# Gere uma nova: python scripts/utils/generate_secret_key.py
SECRET_KEY=your-secret-key-here

# Debug Mode (sempre False em produção)
DEBUG=True

# Hosts permitidos (separados por vírgula)
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# =====================================
# BANCO DE DADOS
# =====================================

# Para desenvolvimento local (SQLite é padrão)
# DATABASE_URL não é necessário para SQLite

# Para produção (PostgreSQL)
# DATABASE_URL=postgresql://user:password@host:port/database

# Conexões do banco
DB_CONN_MAX_AGE=60

# =====================================
# SEGURANÇA (PRODUÇÃO)
# =====================================

# HTTPS e Cookies Seguros
SECURE_SSL_REDIRECT=false
SESSION_COOKIE_SECURE=false
CSRF_COOKIE_SECURE=false

# CSRF Trusted Origins
# CSRF_TRUSTED_ORIGINS=https://yoursite.com,https://www.yoursite.com

# =====================================
# SUPERUSUÁRIO (DEPLOY AUTOMÁTICO)
# =====================================

# Credenciais do admin criado automaticamente
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@caresense.com
DJANGO_SUPERUSER_PASSWORD=change-me-in-production

# =====================================
# RENDER ESPECÍFICO
# =====================================

# Definido automaticamente pelo Render
# RENDER_EXTERNAL_HOSTNAME=your-app.onrender.com

# Versão do Python (para deploy)
PYTHON_VERSION=3.12.0

# =====================================
# OPCIONAIS
# =====================================

# Timezone
TZ=America/Sao_Paulo

# Language
LANGUAGE_CODE=pt-br
